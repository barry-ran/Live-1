<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/collect_item_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                tools:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/collect_item_text_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="#99000000"
                android:paddingBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:paddingTop="@dimen/dp_4"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tv_14"
                tools:text="05:20" />

            <ImageView
                android:id="@+id/collect_item_image_mark_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/collect_img_mark_new"
                android:button="@null"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/collect_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="@dimen/dp_5"
            android:textColor="@color/text_title"
            android:textSize="@dimen/tv_12"
            tools:text=" 士大夫我废物发五分为服务分违法我废物二分违法我分违法我而非我分" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_upload_time"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dp_8"
                android:drawableStart="@drawable/collect_img_mrak_home_time"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_content"
                android:textSize="12sp"
                tools:text="10小时" />

            <TextView
                android:id="@+id/collect_item_text_store"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:drawableLeft="@drawable/collect_img_mrak_home_off"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_content"
                android:textSize="12sp"
                tools:text="66666" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>