<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tool_bar_white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/color_main_color"
    android:elevation="2dp"
    android:minHeight="@dimen/toolbar_height"
    android:subtitle=""
    app:contentInsetStart="0dp"
    android:paddingLeft="11.5dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/greenToolbarTheme">

    <TextView
        android:id="@+id/left_tv_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text=""
        android:textColor="@color/white"
       />

    <TextView
        android:id="@+id/tool_bar_title_tv_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18sp"
         />

    <ImageView
        android:id="@+id/left_iv_white"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:background="?attr/actionBarItemBackground"
        android:padding="12dp"
        android:visibility="gone" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/right_iv_white"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:background="?attr/actionBarItemBackground"
        android:padding="12dp"
       />

    <TextView
        android:id="@+id/right_tv_white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_15"
         />
</android.support.v7.widget.Toolbar>
