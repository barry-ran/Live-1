<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--昼夜模式主色调-->
    <attr name="dayNightBackground" format="color|reference" />
    <attr name="dayNightOneTextColor" format="color|reference" />
    <attr name="dayNightTwoTextColor" format="color|reference" />
    <attr name="dayNightThreeTextColor" format="color|reference" />
    <attr name="dayNightBackgroundDrawable" format="color|reference" />

    <declare-styleable name="DayNightMode">
        <attr name="dayNightBackgroundAttr" format="string|reference" /><!--切换背景属性-->
        <attr name="dayNightOneTextColorAttr" format="string|reference" /><!--切换一级字体颜色属性-->
        <attr name="dayNightTwoTextColorAttr" format="string|reference" /><!--切换二级字体颜色属性-->
        <attr name="dayNightThreeTextColorAttr" format="string|reference" /><!--切换三级字体颜色属性-->
        <attr name="dayNightBackgroundDrawableAttr" format="string|reference" /><!--切换背景图片属性-->
    </declare-styleable>
    <!--ClearEditText 注意:貌似必须加"format='enum'"-->
    <declare-styleable name="text">
        <attr name="hint" format="string" />
        <attr name="inputType" format="enum">
            <enum name="string" value="0" />
            <enum name="number" value="1" />
            <enum name="textPassword" value="2" />
        </attr>
    </declare-styleable>
    <!--图表标点-->
    <declare-styleable name="ArrowTextView">
        <attr name="radius" format="dimension" />
        <attr name="arrowWidth" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="bg" format="color" />
    </declare-styleable>


    <!-- 省去Select的按钮-->
    <declare-styleable name="StateButton">

        <!--text color-->
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="radiusbt" format="dimension|reference" />
        <attr name="round" format="boolean|reference" />

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference" />

    </declare-styleable>


    <!--自定义属性 -->
    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="el_headerLayout" format="reference" />
        <attr name="el_contentLayout" format="reference" />
        <attr name="el_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomTitleBar">
        <attr name="title" format="string" />
        <attr name="left_title" format="string" />
        <attr name="right_title" format="string" />
        <attr name="is_white" format="boolean" />
        <attr name="title_elevation" format="integer" />
    </declare-styleable>

    <declare-styleable name="SearchTitleBar">
        <attr name="search_title" format="string" />
        <attr name="search_hint" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomBottomTab">
        <attr name="left_text" format="string" />
        <attr name="right_text" format="string" />
    </declare-styleable>
    <!--验证码的属性-->
    <declare-styleable name="VerCodeEditText">
        <attr name="figures" format="integer" />
        <attr name="verCodeMargin" format="dimension" />
        <attr name="bottomLineSelectedColor" format="reference" />
        <attr name="bottomLineNormalColor" format="reference" />
        <attr name="bottomLineHeight" format="dimension" />
        <attr name="selectedBackgroundColor" format="reference" />
    </declare-styleable>
    <attr name="bgColor" format="color" />
    <attr name="fgColor" format="color" />
    <attr name="percent" format="float" />
    <attr name="startAngle" format="float" />
    <declare-styleable name="CircularProgressBar">
        <attr name="cpb_progress" format="integer" />
        <attr name="cpb_progressbar_color" format="color" />
        <attr name="cpb_progressbar_color_start" format="color" />
        <attr name="cpb_background_progressbar_color" format="color" />
        <attr name="cpb_progressbar_width" format="dimension" />
        <attr name="cpb_progressbar_start" format="integer" />
        <attr name="cpb_background_progressbar_width" format="dimension" />
    </declare-styleable>
    <!--水滴形状圆形进度条-->
    <declare-styleable name="WaterProgressBar">
        <attr name="water_progressbar_width" format="dimension" />
        <attr name="water_progressbar_start" format="integer" />
        <attr name="water_progressbar_count" format="integer" />
        <attr name="water_progressbar_bg" format="reference" />
        <attr name="water_progressbar_bg_img" format="reference" />
    </declare-styleable>
    <!--多种颜色变换按钮-->
    <declare-styleable name="RippleButton">
        <attr name="gray_text" format="string" />
        <attr name="red_text" format="string" />
        <attr name="green_text" format="string" />
        <attr name="loading_text" format="string" />
    </declare-styleable>

    <!--水波纹进度条-->
    <declare-styleable name="WaveLoadingView">
        <attr name="wlv_borderWidth" format="dimension" />
        <attr name="wlv_borderColor" format="color" />
        <attr name="wlv_progressValue" format="integer" />
        <attr name="wlv_shapeType" format="enum">
            <enum name="triangle" value="0" />
            <enum name="circle" value="1" />
            <enum name="square" value="2" />
            <enum name="rectangle" value="3" />
        </attr>
        <attr name="wlv_triangle_direction" format="enum">
            <enum name="north" value="0" />
            <enum name="south" value="1" />
            <enum name="east" value="2" />
            <enum name="west" value="3" />
        </attr>
        <attr name="wlv_round_rectangle" format="boolean" />
        <attr name="wlv_round_rectangle_x_and_y" format="integer" />
        <attr name="wlv_waveColor" format="color" />
        <attr name="wlv_wave_background_Color" format="color" />
        <attr name="wlv_waveAmplitude" format="float" />
        <attr name="wlv_titleTop" format="string" />
        <attr name="wlv_titleCenter" format="string" />
        <attr name="wlv_titleBottom" format="string" />
        <attr name="wlv_titleTopSize" format="dimension" />
        <attr name="wlv_titleCenterSize" format="dimension" />
        <attr name="wlv_titleBottomSize" format="dimension" />
        <attr name="wlv_titleTopColor" format="color" />
        <attr name="wlv_titleCenterColor" format="color" />
        <attr name="wlv_titleBottomColor" format="color" />
        <attr name="wlv_titleTopStrokeColor" format="color" />
        <attr name="wlv_titleTopStrokeWidth" format="dimension" />
        <attr name="wlv_titleBottomStrokeColor" format="color" />
        <attr name="wlv_titleBottomStrokeWidth" format="dimension" />
        <attr name="wlv_titleCenterStrokeColor" format="color" />
        <attr name="wlv_titleCenterStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="QQSliddingMenu">
        <attr name="rigthtPadding" format="dimension"/>
    </declare-styleable>
</resources>